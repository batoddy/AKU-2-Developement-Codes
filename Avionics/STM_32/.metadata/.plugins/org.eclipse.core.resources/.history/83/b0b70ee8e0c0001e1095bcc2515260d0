#include "aku_config.h"
#include "aku_infrastructure.h"
#include "main.h"

#ifndef INC_AKU_INFRASTRUCTURE_C_
#define INC_AKU_INFRASTRUCTURE_C_

int batu = 0;

void aku_delay(uint16_t delay){
	__HAL_TIM_SET_COUNTER(DELAY_TIMER,0);
	while(__HAL_TIM_GET_COUNTER(DELAY_TIMER) < delay){
		batu++;
	}

}
#endif /* INC_AKU_INFRASTRUCTURE_C_ */
